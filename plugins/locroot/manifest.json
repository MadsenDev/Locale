{
  "id": "locroot",
  "name": "Locroot",
  "version": "0.1.0",
  "description": "Scan UI strings, manage language workspaces, and auto-sync translations.",
  "icon": "icon.png",
  "type": "externalApp",
  "capabilities": ["launcher"],
  "launch": {
    "gallery": true,
    "requiredContext": ["projectPath"],
    "targets": {
      "win32": {
        "path": ".\\\\bin\\\\Locroot.exe",
        "args": ["--project={projectPath}"]
      },
      "darwin": {
        "path": "./bin/Locroot.app/Contents/MacOS/Locroot",
        "args": ["--project={projectPath}"]
      },
      "linux": {
        "path": "./bin/Locroot-0.1.0.AppImage",
        "args": ["--project={projectPath}"]
      }
    },
    "projectActions": [
      {
        "id": "project-menu",
        "label": "Open in Locroot",
        "description": "Launch Locroot for the selected project.",
        "requiredContext": ["projectPath"]
      }
    ]
  }
}
