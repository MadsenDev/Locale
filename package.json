{
  "name": "localeforge",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "npm run electron:dev",
    "electron:dev": "concurrently -k \"vite --port 5173 --strictPort\" \"npm:electron:compile\" \"npm:electron:watch\"",
    "electron:prepare": "node scripts/ensure-electron-cjs.cjs",
    "electron:compile": "npm run electron:prepare && tsc -w -p electron/tsconfig.json",
    "electron:watch": "wait-on http://localhost:5173 /home/chris/Documents/GitHub/Locale/dist-electron/main.js && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron dist-electron/main.js",
    "build": "npm run build:renderer && npm run build:main",
    "build:renderer": "vite build",
    "build:main": "npm run electron:prepare && tsc -p electron/tsconfig.json",
    "lint": "echo \"lint not configured\"",
    "test": "vitest run",
    "start": "electron dist-electron/main.js",
    "pack": "npm run build && electron-builder build --dir",
    "dist": "npm run build && electron-builder"
  },
  "dependencies": {
    "@babel/generator": "^7.28.5",
    "@babel/parser": "^7.24.7",
    "@babel/traverse": "^7.24.7",
    "@babel/types": "^7.28.5",
    "fast-glob": "^3.3.2",
    "framer-motion": "^11.2.6",
    "lodash": "^4.17.21",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.2.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/babel__traverse": "^7.20.6",
    "@types/lodash": "^4.17.7",
    "@types/node": "^20.12.12",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^29.3.0",
    "electron-builder": "^24.13.3",
    "jsdom": "^27.2.0",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "vite": "^5.2.10",
    "vitest": "^4.0.14",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.localeforge.app",
    "productName": "LocaleForge",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist",
      "dist-electron",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
